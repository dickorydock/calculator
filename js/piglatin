
function myReplace(str, before, after) {
  if (before[0].toLowerCase()==before[0]){
     afterCorrectCaseLetter = after[0].toLowerCase();
     }; 
   if (before[0].toUpperCase()==before[0]){
     afterCorrectCaseLetter = after[0].toUpperCase();
     };
  afterFull = afterCorrectCaseLetter+after.slice(1);
  return str.replace(before,afterFull);
}
